  <style>
    .div1 {
      display: flex;
      justify-content: space-between;
      margin: 10px;
    }
    .div2 {
      display: flex;
      margin-left: 10px;
    }
    #btn-search {
      margin-left: 5px;
    }
    #table-head {
      margin-top: 5px;
      margin: 10px;
      margin-right: 10px;
    }
